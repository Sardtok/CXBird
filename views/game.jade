cxbird(width='50%', height='100%', game='game', display='inline-block')

table.currentplayers
	tr
		th Handle
		th Color
		th High
		th Score
	tr(ng-repeat="player in players | orderBy:'score':true")
		td {{player.handle | truncateHandle}}
		td(style='background-color:{{player.color}}')
		td.number {{player.highscore}}
		td.number {{player.score}}